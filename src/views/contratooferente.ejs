<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('incs/head') %>
  <link rel="stylesheet" href="/css/styleCONTR.css">
  <script  src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
<script src="PUNTAJEapp.js"></script> 
  <title>Contratos</title>
</head>

<body>
    <header>
      <%- include('incs/header') %>
        
      </header>
       <div class="container">
         <div class="contrato-container">
           
           <div class="contrato">
             <h2>CONTRATO</h2>
             <div class="contrato-items">
               <form action="">
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Cliente</th>
                        <th scope="col">Fecha Inicio</th>
                        <th scope="col">Fecha Fin</th>
                        <th scope="col">Cotizaci√≥n</th>
                        <th scope="col">Estado</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        
                      <% for (let contrato of contratos) { %>
                        <tr data-id="<%= contrato.Id_propuesta %>">
                          <th scope="row">
                            <%= contrato.Id_propuesta %>
                          </th>
                          <td>
                            <%= contrato.Id_cliente_p %>
                          </td>
                          <td>
                            <%= contrato.Fecha_inicio %>
                          </td>
                          <td>
                            <%= contrato.Fecha_fin %>
                          </td>
                          <td>
                            <%= contrato.Monto_a_abonar %>
                          </td>
                          <td>
                            <%= contrato.Estado %>
                          </td>

                          <td class="d-flex">
                            <button type="button" class="btn btn-primary"  data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo"> <a href="/formcontratacion">  Enviar contrato </a></button>
                            <button type="button" class="btn btn-primary"  data-bs-toggle="modal" data-bs-target="#exampleModal2" data-bs-whatever="@mdo">Denunciar usuario</button>
                          </td> 
                      <!-- <tr> 
                        <th scope="row">1</th>
                        <td>Nombre</td>
                        <td>1121212143</td>
                        <td>Gasista</td>
                        <td>07/10/2022</td>
                        <td id="fechaFin">27/11/2022</td>
                        <td>$25000</td>
                        <td>Aceptado</td>
                      </tr> -->
                      <% } %>
                      </tr>
                    </tbody>
                  </table>
              

               <div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1 class="modal-title fs-5" id="exampleModalLabel">DENUNCIAR USUARIO</h1>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <form>
                       
                        <div class="mb-3">
                          <label for="message-text" class="col-form-label">Motivo:</label>
                          <textarea class="form-control" id="message-text"></textarea>
                        </div>
                      </form>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                      <button type="button" class="btn btn-danger">Enviar</button>
                    </div>
                  </div>
                </div>
              </div>
               
              </form>
             </div>
           </div>
         </div>
       </div>
</body>

</html>